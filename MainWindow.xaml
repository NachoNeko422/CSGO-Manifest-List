<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="NachoDayo">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--第一行-->
        <Grid Grid.Row="0" Background="#1e2122">
            <Image Source="/src/ico/ico.png"
               Width="50"
               Height="50"
               Stretch="Uniform"
               HorizontalAlignment="Left"
               Margin="10,0,0,0"/>
            <TextBlock Text="Counter-Strike All Release Downloader"
                   FontFamily="/Assets/Fonts/Fonts.ttf#宝 我今天特别乖"
                   FontSize="30"
                   HorizontalAlignment="Left"
                   Margin="80,5,0,0"/>

            <!--参考线-->
            <Rectangle Stroke="Red" StrokeThickness="2" StrokeDashArray="4,2"
                       Fill="Transparent" IsHitTestVisible="False"/>
        </Grid>

        <!--第二行-->
        <Grid Grid.Row="1" Background="#272728">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            

            <!--控件-->
            <Grid Grid.Column="0" Background="#1e2122">
                <TextBlock Text="目前CS2在线人数:"
                           FontFamily="/Assets/Fonts/Fonts.ttf#宝 我今天特别乖"
                           TextWrapping="Wrap"
                           Width="90"
                           FontSize="21"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="4,0,0,110"/>
                <TextBox x:Name="ResultBlock"
                         IsReadOnly="True"
                         FontSize="20"
                         FontFamily="/Assets/Fonts/Fonts.ttf#宝 我今天特别乖"
                         TextWrapping="Wrap"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Bottom"
                         Margin="4,0,0,60"
                         Text="Loading..."/>
                
                <Button x:Name="CS2" Height="50" Width="100" Content="731" VerticalAlignment="Top" Click="CS2_Click"/>
                <Button x:Name="CSGO" Height="50" Width="100" Content="732" VerticalAlignment="Top" Margin="0,50,0,0" Click="CSGO_Click"/>
                <Button x:Name="CMD" Height="50" Width="100" Content="指令" VerticalAlignment="Top" Margin="0,100,0,0" Click="CMD_Click"/>
                <Button x:Name="NachoDayo" Height="50" Width="100" Content="开发者" VerticalAlignment="Bottom" Click="NachoDayo_Click"/>
                <Button x:Name="Home" Height="50" Width="100" Content="Home" VerticalAlignment="Top" Margin="0,150,0,0" Click="Home_Click"/>
            </Grid>

            <!-- 右侧内容区-->
            <Frame x:Name="MainFrame" Grid.Column="1" Background="Transparent"/>

            <!--参考线-->
            <Rectangle Stroke="Red" StrokeThickness="2" StrokeDashArray="4,2"
                       Fill="Transparent" IsHitTestVisible="False"/>
        </Grid>
    </Grid>
</Window>
